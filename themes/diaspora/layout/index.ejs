<%- partial("_partial/menu", null, {cache: true}) %>
<div id="container">
    <%- partial("_partial/screen", null, {cache: false}) %>

    <% if (page.tag || page.category) { %>
        <div class="post">
            <a href="/" title="回到首页">
                <%- image_tag( theme.cover[Math.floor(Math.random() * theme.cover.length)], {class: "cover", width: 680, height: 440}) %>
            </a>
            <div class="else">
                <p>当前正在浏览:</p>
                <% if (page.tag) { %>
                    <h3><%= "Tag-" + (page.tag || "Unknown") %></h3>
                <% } %>
                <% if (page.category) { %>
                    <h3><%= "Category-" + (page.category || "Unknown") %></h3>
                <% } %>
            </div>
        </div>
    <% } %>

    <div id="primary">
        <%- partial('_partial/list', {start: (theme.cover_article.enable ? 1 : 0)}) %>
    </div>
    <% if (page.total > 1 && page.next_link){ %>
    <div id="pager"><a href="<%- url_for(page.next_link) %>" class="more">加载更多</a></div>
    <% } %>
</div>
<div id="preview"></div>
<% if (theme.beian.enable && theme.beian.enableFooter){ %>
	<center><a rel="nofollow" style="color: #666;" href="<%=theme.beian.link%>" target="_blank"><%=theme.beian.beianInfo%></a></center>
<%}%>

